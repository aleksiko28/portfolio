      flex-direction: column;
    }
    .content {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
  @media only screen and (max-width: 720px) {
    .content {
      padding: 0;

      .personal-grid {
        grid-template-columns: repeat(1, 1fr);
      }
    }
  }
</style>
