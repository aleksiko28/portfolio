---
import "../styles/index.scss"
---

<a
  target="_blank"
  rel="noreferrer"
  href="https://github.com/aleksiko28"
  data-type="link"
  class="hover interactable info"
>
  <img
    class="moon"
    src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/moon2.png"
    alt=""
  />
  <img
    class="github-icon"
    src="https://iconmonstr.com/wp-content/g/gd/makefg.php?i=../releases/preview/2012/png/iconmonstr-github-1.png&r=0&g=0&b=0"
  />
</a>
<div class="stars">
  <div class="twinkling">
    <div class="clouds">
      <div class="blue-gradient">
        <div class="purple-haze"></div>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  @import "../styles/index.scss";

  .hover {
    position: absolute;
    top: 3rem;
    right: 3rem;
    width: 100px;
    height: 100px;
    z-index: 999;
    transition: 0.3s all ease;
    border-radius: 50%;
    &:hover {
      cursor: pointer;
      scale: 1.1;
      rotate: 5deg;
      box-shadow: 0 4px 6px -1px $accent, 0 2px 4px -2px rgba(255, 255, 255, 1);
    }
  }
  .moon,
  .github-icon {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    z-index: 2;
    opacity: 0.4;
  }
  .github-icon {
    z-index: 3;
    filter: invert(60%);
  }

  .parallax-container {
    position: absolute;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    img {
      width: 100%;
      height: 100%;
      position: absolute;
    }
  }
</style>
