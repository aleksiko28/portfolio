---
export interface Props {
  title: string
}

const { title } = Astro.props
import favicon from "../assets/favicon.svg"
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="The personal portfolio web page for Aleksi Koivu."
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={favicon.src} />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script defer src="https://kit.fontawesome.com/1ee8f271b9.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>
<style lang="scss" is:global>
  @use "../styles/index.scss";
</style>
