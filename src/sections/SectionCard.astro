---
const { noPadding } = Astro.props;
---

<div class="intro hidden">
  <div class:list={['content', { zeroPad: noPadding }]}>
    <slot />
  </div>
</div>

<style lang="scss">
  @import "../styles/index.scss";

  .intro {
    display: flex;
    flex-direction: column;
    margin: 0;
    align-items: center;
    border: 1px solid $color-border-card;
    backdrop-filter: blur(32px);
    -webkit-backdrop-filter: blur(32px);
    background-color: rgba(28, 28, 28, 0.2);
    color: $body-text-color;
    border-radius: $border-radius-card;
    overflow: hidden;
    transition: all 350ms ease;
    width: 100%;

    &.hidden {
      opacity: 0;
      filter: blur(5px);
      -webkit-filter: blur(5px);
    }

    &.visible {
      opacity: 1;
      filter: blur(0);
      -webkit-filter: blur(0);
    }

    .content {
      display: flex;
      width: 100%;
      height: 100%;
      padding: 2rem;
      box-sizing: border-box;
      &.zeroPad {
        padding: 0;
      }
    }

    .header {
      width: 100%;
      align-self: flex-start;
      background: $accent-gradient-card;
      display: flex;
      justify-content: space-between;
      align-items: center;
      .header-text {
        text-transform: uppercase;
        font-size: 2rem;
        color: black;
        line-height: 1;
        padding: 1rem 2rem;
        margin: 0;
      }
      .appendix-text {
        font-size: 1rem;
        color: $body-text-color;
        line-height: 1;
        padding: 1rem 2rem;
        margin: 0;
      }
    }
  }
  @media only screen and (max-width: 600px) {
    .intro .content {
      flex-direction: column-reverse;
    }
  }
  
</style>
