  html {
    min-height: 100%;
  }

  body {
    min-height: 100%;
    position: relative;
    padding: 0;
    margin: 0;
    overflow: auto;
    display: flex;
    background: var(--color-background);
  }

  main {
    display: flex;
    width: 100%;
    flex-direction: column;
    padding-top: 0;
    height: 100%;
    opacity: 1;
    z-index: $z-index-content;
    position: relative;
  }

  .content {
    padding: 0 2rem;
    padding-bottom: 3rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10rem;
    max-width: 1160px;

    .section-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      gap: 2rem;
      position: relative;
    }

    .personal-grid {
      position: relative;
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(2, 1fr);

      &::before {
        position: absolute;
        content: "";
        z-index: -1;
        top: -50%;
        bottom: -20rem;
        width: 100%;
        left: 0;
        background: url('../assets/noise.webp') repeat,linear-gradient(83.21deg,#3245ff 0%,#1c732e 100%);
        background-blend-mode: overlay;
        -webkit-mask-image: radial-gradient(rgba(0,0,0,.5),transparent 70%);
        mask-image: radial-gradient(rgba(0,0,0,.5),transparent 70%);
      }

      .contact-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-rows: repeat(1, 1fr);
      }

      .hobby-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(2, auto);
      }
    }
  }

  h1 {
    font-size: 3rem;
    font-weight: 400;
    background: -webkit-linear-gradient(white, #38495a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0;
  }
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    color: var(--body-text-color);
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  @media only screen and (max-width: 1000px) {
