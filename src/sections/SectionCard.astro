---
const { noPadding } = Astro.props;
---

<div class="intro">
  <div class:list={['content hidden', { zeroPad: noPadding }]}>
    <slot />
  </div>
</div>

<style lang="scss">
  @import "../styles/index.scss";

  .intro {
    display: flex;
    flex-direction: column;
    margin: 0;
    align-items: center;
    border: 1px solid $color-border-card;
    backdrop-filter: blur(32px);
    -webkit-backdrop-filter: blur(32px);
    background-color: rgba(28, 28, 28, 0.2);
    color: $body-text-color;
    border-radius: $border-radius-card;
    overflow: hidden;
    width: 100%;

    .content {
      display: flex;
      width: 100%;
      height: 100%;
      padding: 2rem;
      box-sizing: border-box;
      transition: opacity $transition-medium ease, filter $transition-fast ease;

      &.hidden {
        opacity: 0;
        filter: blur(5px);
        -webkit-filter: blur(5px);
      }

      &.visible {
        opacity: 1;
        filter: blur(0);
        -webkit-filter: blur(0);
      }
      &.zeroPad {
        padding: 0;
      }
    }
  }

  @media only screen and (max-width: 720px) {
    .intro {
      border-radius: 0;
    }
  }
  
</style>
